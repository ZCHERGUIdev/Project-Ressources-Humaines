<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtAdmin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac3"
    android:orientation="horizontal"
    android:padding="48dp"
    tools:context=".Ui.Account.AccountActivity">

    <ImageView
        android:id="@+id/imageLoginLogo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/textUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageLoginLogo"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:hint="User Name"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:text="" />


    <EditText
        android:id="@+id/textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textUsername"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:hint=" Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:text="" />

    <Button
        android:id="@+id/textViewSignupLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPassword"
        android:layout_marginTop="10dp"
        android:backgroundTint="#010101"
        android:onClick="doSignupOrLogin"
        android:text="Login"
        android:textColor="#E3DBC8"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/btnSignupLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSignupLogin"
        android:layout_marginTop="20sp"
        android:onClick="ActiveDefaultBehaviour"
        android:text="LogIn"
        android:textAlignment="center"
        android:textColor="#010101"
        android:visibility="gone" />

    <View
        android:id="@+id/viewid"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textViewSignupLogin"
        android:layout_marginTop="30dp"
        android:background="#E3DBC8"
        android:rotation="0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="I'am Admin"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>