<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.LotssActivity">


       <include
           android:id="@+id/appbar"
           layout="@layout/appbat"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/appbar"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/txtLotInpute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Entre N Lot"
            android:gravity="center"
            android:inputType="textPersonName"
            android:ems="10"
            />
        <LinearLayout
            android:id="@+id/lstLotLayot"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:layout_below="@id/include2"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtNumLot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:gravity="center"
                android:text="List De Lots (0)"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="170dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/black" />

        </LinearLayout>
        <ListView
            android:id="@+id/lstLots"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txtLotInpute"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="30dp">
        <EditText
            android:id="@+id/txtTachInpute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Entre N Tach"
            android:gravity="center"
            android:inputType="textPersonName"
            android:ems="10"
            />
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:layout_below="@id/include2"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtNumTach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:gravity="center"
                android:text="List Des Taches (0)"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="170dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/black" />

        </LinearLayout>
        <ListView
            android:id="@+id/lstTach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txtLotInpute"
            />

    </LinearLayout>


</RelativeLayout>